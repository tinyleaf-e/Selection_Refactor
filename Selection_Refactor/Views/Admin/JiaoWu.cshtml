@{
    ViewBag.Title = "JiaoWu";
    ViewBag.BoxTitle = "教务教师信息";
}
@section css{
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/fileinput.min.css" rel="stylesheet" />
}

<div id="page-wrapper">
    <div class="box">
        <div style="padding-left:10px;padding-top:10px">
            <button id="uploadJiaowuTeachers" class="btn btn-block btn-primary bg-light-blue color-palette" style="width:12%;display:inline;vertical-align:baseline;">上传教务教师</button>
            <button id="addJiaowuTeachers" class="btn btn-block btn-primary bg-green color-palette" style="width:12%;margin-left:5px;display:inline;vertical-align:baseline;">新增教务教师</button>
        </div>
        <div class="box-body">
            <div id="professor-table" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" data-field="Number" style="width: 55px;">编号</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" data-field="TeacherName" style="width: 65px;">姓名</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" data-field="MajorResposible" style="width: 60px;">负责专业方向</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 120px;" data-formatter="operateFormatter" data-align='center' data-events='operateEvents'>操作</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th rowspan="1" colspan="1">编号</th>
                                    <th rowspan="1" colspan="1">姓名</th>
                                    <th rowspan="1" colspan="1">负责专业方向</th>
                                    <th rowspan="1" colspan="1">操作</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>

</div>
<div style="clear:both">

    <!-- /. ROW  -->
</div>
<!-- /. PAGE INNER  -->
<!-- /. PAGE WRAPPER  -->
<!--以下是批量创建教师模态框-->
<div class="modal" id="batchAdd-JiaowuTeachers-modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4>请上传xlsx或xls文件</h4>
            </div>
            <div class="modal-body">
                <a href="~/ExcelFiles/template/教师批量录入.xlsx" class="form-control" style="margin-bottom:10px">下载导入模板</a>
                <input id="input-file" type="file" data-preview-file-type="text" name="file">
            </div>
        </div>
    </div>
</div>
<!--以上是批量创建教师模态框-->
<!--以下是直接新增教师模态框-->
<div class="modal" id="directAdd-JiaowuTeachers-modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="height:340px">
            <div class="modal-header" style="padding-left:25px">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4>新增教务教师</h4>
            </div>
            <div class="modal-body">
                <form style="height:80%">
                    <div class="row" style="width:45%;display:inline;vertical-align:baseline;padding-left:50px;">
                        <div class="column" style="float:left;padding-left:20px">
                            <label>姓名</label>
                            <input type="text" class="form-control" placeholder="" style="width:200px;">
                        </div>
                        <div class="column" style="float:left;padding-left:50px">
                            <label>编号</label>
                            <input type="text" class="form-control" placeholder="" style="width:200px;">
                        </div>
                    </div>
                    <div class="row" style="width:45%;display:inline;vertical-align:baseline;padding-left:50px;">
                        <div class="column" style="float:left;padding-left:20px">
                            <label>负责专业方向</label>
                            <input type="text" class="form-control" placeholder="" style="width:200px;">
                        </div>
                    </div>
                </form>
                <div style="float:right;padding-right:35px">
                    <button type="submit" class="btn btn-primary">确认提交</button>
                </div>

            </div>
        </div>
    </div>
</div>
<!--以上是直接新增教师模态框-->
<!-- /. WRAPPER  -->
