
@{
    ViewBag.Title = "导师列表";
    ViewBag.CurrentTab = "professor";
    ViewBag.Stage = 2;
}
<div id="page-wrapper">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h2 class="box-title">教师列表</h2>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;" id="dataTables-example_filter">
                        <input type="text" id="professorName" placeholder="搜索教师姓名" required class="form-control pull-right">
                        <div class="input-group-btn">
                            <button type="submit" id="searchProfessors" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-hover" id="professorTable" data-toggle="table" data-url="/Gao_Admin/getProfessors?p=0" data-row-style="rowStyle">
            <thead>
                <tr>
                    <th data-field="Order" style="font-size:small">序号</th>
                    <th data-field="ProName">姓名</th>
                    <th data-field="ProTitle">职称</th>
                    <th data-formatter="operateFormatter" data-align='center' data-events='operateEvents'>详情</th>
                </tr>
            </thead>
        </table>
    </div>
    <div style="clear:both"></div>
</div>

<script>
    function operateFormatter(value, row, index) {

        return [
            '<button type="button" class="btn btn-block btn-info">查看</button> ',
        ].join('');
    }

    window.operateEvents = {

        'click .btn-check': function (e, value, row, index) {
            //  console.log(row);
            var data = {
                'UserId': row["UserId"]
            }
            //window.open(row["ProInfoUrl"]);
            //这里需要换一个url
            //window.location.href = ProfessorInformation(data.UserId).
            window.location.href = "/Gao_JiaoWu/ProfessorInfo?UserId=" + row["UserId"];
        }
    };
</script>


