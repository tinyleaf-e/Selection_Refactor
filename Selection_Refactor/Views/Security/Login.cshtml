@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";
}
@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/css/pages/login.css" />
    <link href="~/Content/css/vegas.min.css" />
}

<style>
    .vegas-background {
        top: 0px !important;
        bottom: 0px !important;
        width: 100% !important;
        height: 100% !important;
        -webkit-filter: blur(5px) brightness(80%); /* Chrome, Opera */
        -moz-filter: blur(5px) brightness(80%);
        filter: blur(5px) brightness(80%);
        filter: progid:DXImageTransform.Microsoft.Blur(PixelRadius=5, MakeShadow=false); /* IE6~IE9 */
    }

    .vegas-overlay {
        opacity: .5;
        background: url(overlays/02.png) center center
    }
</style>

<div class="login-box">
    <div class="item">
        <label>用户名：</label>
        <input id="userid-input" class="form-control" placeholder="请输入用户名" />
    </div>
    <div class="item">
        <label>密码：</label>
        <input id="passwd-input" class="form-control" type="password" placeholder="请输入密码" />
    </div>
    <div>
        <label>
            <input type="radio" name="userType" value="3" checked>
            学生
        </label>
        <label>
            <input type="radio" name="userType" value="2">
            导师
        </label>
        <label>
            <input type="radio" name="userType" value="1">
            教务
        </label>
        <label>
            <input type="radio" name="userType" value="0">
            管理员
        </label>
    </div>
    <button id="login-btn" class="btn btn-primary login-btn">登录</button>
</div>


@section script{
    <script src="~/Content/js/pages/login.js"></script>
    <script src="~/Content/js/gy-alert.js"></script>
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/vegas.js"></script>
    <script>
        $(document).ready(function () {
            $("#login-btn").click(function () {
                var role = $('input:radio[name="userType"]:checked').val();
                console.log(role);
            });


        });
    </script>
}
